"""

Simple and light-weight script to show any json file in a nice and readable format

"""


import sys
import json
import argparse


if __name__ == '__main__':

    # Parser for the required arguments
    parser = argparse.ArgumentParser(description=__doc__, formatter_class=argparse.RawTextHelpFormatter)
    parser.add_argument("path_json", type=str, help="The path of the json file to view (also KProfile, KSchedule, etc..)")

    # print the help if no arguments are passed
    if len(sys.argv) == 1:
        parser.print_help()
        sys.exit(1)

    # parse the arguments..
    args = parser.parse_args()

    with open(args.path_json, "r") as f:
        json_data = json.load(f)

    print json.dumps(json_data, sort_keys=True, indent=4, separators=(',', ': '))
