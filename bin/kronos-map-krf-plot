import argparse

from kronos.core.logreader.profiler_reader import read_allinea_log
from kronos.core.post_process.krf_data import KRFJob

if __name__ == "__main__":

    # Read other arguments if present..
    parser = argparse.ArgumentParser(description=__doc__)
    parser.add_argument('map_file', help="Path of MAP (json) file")
    parser.add_argument('krf_file', help="Path of KRF file")
    args = parser.parse_args()

    # get data from the krf_file
    krf_data = KRFJob.from_krf_file(args.krf_file)

    # get data from the map file
    map_job = read_allinea_log(args.map_file)



    # plot



